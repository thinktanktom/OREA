{% comment %}
  ORÉA Contact Page Template
  
  To use this template:
  1. Go to Online Store → Pages → Add page
  2. Enter your title (e.g., "Contact")
  3. In the Template dropdown at the bottom, select "page.contact"
{% endcomment %}

<main class="min-h-screen bg-[#fcfcf9]">
  
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pb-24 px-6">
    <div class="w-full max-w-4xl mx-auto text-center space-y-6">
      <h4 class="text-[10px] uppercase tracking-[0.6em] text-stone-400 font-bold">Get in Touch</h4>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-stone-900 leading-tight">
        {{ page.title | default: 'Contact ORÉA' }}
      </h1>
      <p class="text-lg text-stone-500 font-light max-w-xl mx-auto leading-relaxed">
        We're here to help with any questions about our collections, bespoke services, or your jewellery journey.
      </p>
    </div>
  </section>

  <!-- Contact Grid -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
        
        <!-- Contact Form -->
        <div class="order-2 lg:order-1">
          <div class="bg-white border border-stone-100 p-8 md:p-12">
            <h2 class="text-2xl font-serif text-stone-900 mb-8">Send a Message</h2>
            
            {% form 'contact', class: 'space-y-6' %}
              
              {% if form.posted_successfully? %}
                <div class="p-6 bg-stone-50 border border-stone-200 text-center">
                  <p class="text-stone-900 font-medium mb-2">Thank you for your message.</p>
                  <p class="text-stone-500 font-light text-sm">We'll be in touch within 24-48 hours.</p>
                </div>
              {% endif %}
              
              {% if form.errors %}
                <div class="p-6 bg-red-50 border border-red-200">
                  {{ form.errors | default_errors }}
                </div>
              {% endif %}
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="contact-name" class="block text-[9px] font-bold uppercase tracking-widest text-stone-400 mb-2">
                    Name <span class="text-stone-300">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="contact-name"
                    name="contact[name]"
                    required
                    class="w-full py-4 px-0 bg-transparent border-b border-stone-200 text-sm focus:outline-none focus:border-stone-900 transition-colors placeholder:text-stone-300"
                    placeholder="Your name"
                  />
                </div>
                <div>
                  <label for="contact-email" class="block text-[9px] font-bold uppercase tracking-widest text-stone-400 mb-2">
                    Email <span class="text-stone-300">*</span>
                  </label>
                  <input 
                    type="email" 
                    id="contact-email"
                    name="contact[email]"
                    required
                    class="w-full py-4 px-0 bg-transparent border-b border-stone-200 text-sm focus:outline-none focus:border-stone-900 transition-colors placeholder:text-stone-300"
                    placeholder="your@email.com"
                  />
                </div>
              </div>
              
              <div>
                <label for="contact-phone" class="block text-[9px] font-bold uppercase tracking-widest text-stone-400 mb-2">
                  Phone <span class="text-stone-300">(optional)</span>
                </label>
                <input 
                  type="tel" 
                  id="contact-phone"
                  name="contact[phone]"
                  class="w-full py-4 px-0 bg-transparent border-b border-stone-200 text-sm focus:outline-none focus:border-stone-900 transition-colors placeholder:text-stone-300"
                  placeholder="+64"
                />
              </div>
              
              <div>
                <label for="contact-subject" class="block text-[9px] font-bold uppercase tracking-widest text-stone-400 mb-2">
                  Subject
                </label>
                <select 
                  id="contact-subject"
                  name="contact[subject]"
                  class="w-full py-4 px-0 bg-transparent border-b border-stone-200 text-sm focus:outline-none focus:border-stone-900 transition-colors text-stone-900 cursor-pointer"
                >
                  <option value="General Inquiry">General Inquiry</option>
                  <option value="Engagement Rings">Engagement Rings</option>
                  <option value="Bespoke Design">Bespoke Design</option>
                  <option value="Existing Order">Existing Order</option>
                  <option value="Sizing & Fit">Sizing & Fit</option>
                  <option value="Repairs & Service">Repairs & Service</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="contact-message" class="block text-[9px] font-bold uppercase tracking-widest text-stone-400 mb-2">
                  Message <span class="text-stone-300">*</span>
                </label>
                <textarea 
                  id="contact-message"
                  name="contact[body]"
                  required
                  rows="5"
                  class="w-full py-4 px-0 bg-transparent border-b border-stone-200 text-sm focus:outline-none focus:border-stone-900 transition-colors placeholder:text-stone-300 resize-none"
                  placeholder="Tell us how we can help..."
                ></textarea>
              </div>
              
              <div class="pt-4">
                <button 
                  type="submit"
                  class="w-full py-5 bg-stone-900 text-white text-[10px] uppercase tracking-[0.3em] font-bold hover:bg-stone-800 transition-all duration-500"
                >
                  Send Message
                </button>
              </div>
              
            {% endform %}
          </div>
        </div>
        
        <!-- Contact Info -->
        <div class="order-1 lg:order-2 space-y-12">
          
          <!-- Studio Visit -->
          <div class="space-y-4">
            <h3 class="text-lg font-serif text-stone-900">Visit Our Studio</h3>
            <p class="text-stone-500 font-light leading-relaxed">
              Experience our collections in person at our Christchurch studio. Appointments available for personalised consultations.
            </p>
            <div class="text-stone-600 text-sm space-y-1">
              <p class="font-medium">ORÉA Fine Jewellery</p>
              <p class="font-light">123 High Street</p>
              <p class="font-light">Christchurch Central, 8011</p>
              <p class="font-light">New Zealand</p>
            </div>
          </div>
          
          <!-- Hours -->
          <div class="space-y-4">
            <h3 class="text-lg font-serif text-stone-900">Studio Hours</h3>
            <div class="text-stone-500 font-light text-sm space-y-2">
              <div class="flex justify-between">
                <span>Monday – Friday</span>
                <span>10:00 – 17:00</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>By Appointment</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>Closed</span>
              </div>
            </div>
          </div>
          
          <!-- Direct Contact -->
          <div class="space-y-4">
            <h3 class="text-lg font-serif text-stone-900">Direct Contact</h3>
            <div class="space-y-3">
              <a href="mailto:hello@orea.co.nz" class="flex items-center space-x-3 text-stone-600 hover:text-stone-900 transition-colors group">
                <svg class="w-5 h-5 text-stone-400 group-hover:text-stone-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-sm">hello@orea.co.nz</span>
              </a>
              <a href="tel:+6433771234" class="flex items-center space-x-3 text-stone-600 hover:text-stone-900 transition-colors group">
                <svg class="w-5 h-5 text-stone-400 group-hover:text-stone-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-sm">+64 3 377 1234</span>
              </a>
            </div>
          </div>
          
          <!-- Social -->
          <div class="space-y-4">
            <h3 class="text-lg font-serif text-stone-900">Follow Along</h3>
            <div class="flex space-x-6">
              <a href="https://instagram.com/oreajewellery" target="_blank" rel="noopener" class="text-[10px] uppercase tracking-widest font-bold text-stone-400 hover:text-stone-900 transition-colors">
                Instagram
              </a>
              <a href="https://pinterest.com/oreajewellery" target="_blank" rel="noopener" class="text-[10px] uppercase tracking-widest font-bold text-stone-400 hover:text-stone-900 transition-colors">
                Pinterest
              </a>
            </div>
          </div>
          
        </div>
        
      </div>
    </div>
  </section>

  <!-- Page Content (from Shopify admin) -->
  {% if page.content != blank %}
    <section class="py-16 border-t border-stone-100">
      <div class="max-w-3xl mx-auto px-6 prose prose-stone font-light">
        {{ page.content }}
      </div>
    </section>
  {% endif %}

  <!-- Map Section (optional) -->
  <section class="border-t border-stone-100">
    <div class="aspect-[21/9] bg-stone-100 flex items-center justify-center">
      <span class="text-[9px] uppercase tracking-[0.4em] text-stone-300 font-bold">Map Embed Area</span>
    </div>
  </section>

</main>
