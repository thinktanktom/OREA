{% comment %}
  Contact Page Template
{% endcomment %}

<main style="flex-grow: 1;">
  <section style="padding: 9.6rem 2.4rem 6.4rem; text-align: center;">
    <h1 style="font-family: var(--font-heading); font-size: clamp(4rem, 6vw, 6rem); font-weight: 300; letter-spacing: 0.05em; margin-bottom: 3.2rem; color: var(--color-orea-dark);">
      {{ page.title }}
    </h1>
    <div style="width: 6.4rem; height: 1px; background-color: var(--color-orea-gold); margin: 0 auto 4.8rem;"></div>
  </section>

  <section style="padding: 0 2.4rem 12.8rem;">
    <div style="max-width: 800px; margin: 0 auto;">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div style="padding: 2.4rem; background-color: #d4edda; color: #155724; margin-bottom: 3.2rem; border-radius: 4px;">
            <p>Thank you for contacting us. We'll get back to you soon!</p>
          </div>
        {% endif %}

        <div style="margin-bottom: 2.4rem;">
          <label style="display: block; font-size: 1.1rem; letter-spacing: 0.2em; text-transform: uppercase; font-weight: 600; margin-bottom: 1.2rem; color: var(--color-orea-dark);">Name</label>
          <input type="text" name="contact[name]" required style="width: 100%; padding: 1.6rem; border: 1px solid var(--color-orea-linen); font-size: 1.4rem;">
        </div>

        <div style="margin-bottom: 2.4rem;">
          <label style="display: block; font-size: 1.1rem; letter-spacing: 0.2em; text-transform: uppercase; font-weight: 600; margin-bottom: 1.2rem; color: var(--color-orea-dark);">Email</label>
          <input type="email" name="contact[email]" required style="width: 100%; padding: 1.6rem; border: 1px solid var(--color-orea-linen); font-size: 1.4rem;">
        </div>

        <div style="margin-bottom: 2.4rem;">
          <label style="display: block; font-size: 1.1rem; letter-spacing: 0.2em; text-transform: uppercase; font-weight: 600; margin-bottom: 1.2rem; color: var(--color-orea-dark);">Message</label>
          <textarea name="contact[body]" rows="6" required style="width: 100%; padding: 1.6rem; border: 1px solid var(--color-orea-linen); font-size: 1.4rem; resize: vertical;"></textarea>
        </div>

        <button type="submit" style="width: 100%; padding: 2rem; background-color: var(--color-orea-dark); color: var(--color-orea-cream); font-size: 1.1rem; letter-spacing: 0.3em; text-transform: uppercase; font-weight: 600; border: none; cursor: pointer;">
          Send Message
        </button>
      {% endform %}
    </div>
  </section>
</main>
