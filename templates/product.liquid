{% section 'header' %}

<main class="min-h-screen flex flex-col bg-[#fcfcf9]">
  <div class="flex-grow container mx-auto px-4 lg:px-12 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
      
      <!-- Gallery Column -->
      <div class="lg:col-span-7 space-y-6">
        {% section 'product-gallery' %}
      </div>

      <!-- Configuration Column -->
      <div class="lg:col-span-5">
        <div class="lg:sticky lg:top-32 space-y-12">
          {% section 'product-details' %}
          {% section 'product-tabs' %}
          {% section 'value-props' %}
        </div>
      </div>
    </div>

    <section class="mt-40 border-t border-stone-100 pt-24">
      {% section 'related-products' %}
    </section>
  </div>
</main>

{% section 'footer' %}
{% section 'ai-assistant' %}

<script src="{{ 'product-page.js' | asset_url }}" defer></script>