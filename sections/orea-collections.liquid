
<section id="collections" class="pt-24 md:pt-72 pb-32 bg-white overflow-hidden">
  <div class="max-w-[1600px] mx-auto px-6 md:px-24 space-y-24 md:space-y-64">
    {% for block in section.blocks %}
      <div class="flex flex-col md:flex-row gap-8 md:gap-24 items-center md:items-end {% cycle '', 'md:flex-row-reverse' %}">
        
        <!-- Image Container -->
        <div class="w-full md:w-3/5 group">
          <a href="{{ block.settings.collection.url }}" class="relative block w-full aspect-[3/4] overflow-hidden bg-orea-cream shadow-sm">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 1200 | image_tag: class: 'w-full h-full object-cover transition-transform duration-[3s] group-hover:scale-105' }}
            {% else %}
              {{ block.settings.collection.featured_image | image_url: width: 1200 | image_tag: class: 'w-full h-full object-cover transition-transform duration-[3s] group-hover:scale-105' }}
            {% endif %}
            <div class="absolute inset-0 bg-orea-dark/0 group-hover:bg-orea-dark/[0.02] transition-colors duration-1000"></div>
          </a>
        </div>

        <!-- Content Area -->
        <div class="w-full md:w-2/5 pb-4">
          <div class="space-y-6 md:space-y-10 text-center md:text-left">
            <div class="space-y-4">
              <h3 class="font-serif text-3xl md:text-5xl text-orea-dark font-light tracking-tight uppercase">
                {{ block.settings.collection.title | default: "Collection" }}
              </h3>
              <p class="text-[11px] md:text-[12px] text-orea-taupe font-medium tracking-[0.2em] uppercase leading-relaxed">
                {{ block.settings.description }}
              </p>
            </div>
            <div class="pt-2">
              <a href="{{ block.settings.collection.url }}" class="group/btn inline-flex items-center space-x-6 text-[9px] tracking-[0.45em] uppercase text-orea-dark hover:text-orea-gold transition-colors">
                <span class="font-semibold border-b border-orea-dark/10 pb-1">Explore</span>
                <span class="group-hover/btn:translate-x-2 transition-transform">→</span>
              </a>
            </div>
          </div>
        </div>

      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "ORÉA Collection List",
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Item",
      "settings": [
        { "type": "collection", "id": "collection", "label": "Collection" },
        { "type": "image_picker", "id": "image", "label": "Override Image" },
        { "type": "text", "id": "description", "label": "Description" }
      ]
    }
  ],
  "presets": [{ "name": "ORÉA Collection List" }]
}
{% endschema %}
