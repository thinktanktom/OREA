
<div id="HeaderWrapper" class="fixed top-0 left-0 w-full z-50 transition-all duration-700 py-6 md:py-10">
  <div class="max-w-[1800px] mx-auto px-5 md:px-16 flex justify-between items-center">
    
    <!-- Left Navigation -->
    <div class="hidden lg:flex items-center space-x-12 text-[10px] tracking-[0.4em] font-medium text-orea-dark uppercase">
      {% for link in linklists[section.settings.menu].links %}
        <a href="{{ link.url }}" class="hover:text-orea-gold transition-colors duration-500">{{ link.title }}</a>
      {% endfor %}
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="lg:hidden text-orea-dark" id="MobileMenuOpen">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"></line><line x1="4" x2="20" y1="6" y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg>
    </button>

    <!-- Logo -->
    <div class="absolute left-1/2 -translate-x-1/2 text-center">
      <a href="/" class="font-serif text-2xl md:text-4xl tracking-[0.15em] text-orea-dark hover:opacity-70 transition-opacity">
        {{ shop.name | uppercase }}
      </a>
    </div>

    <!-- Right Icons -->
    <div class="flex items-center space-x-4 md:space-x-8 text-orea-dark">
      <a href="/search" class="p-1 hover:text-orea-gold transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
      </a>
      <a href="/cart" class="p-1 hover:text-orea-gold transition-colors relative">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path><path d="M3 6h18"></path><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
        <span class="absolute -top-0.5 -right-0.5 text-[7px] bg-orea-dark text-orea-cream w-3.5 h-3.5 rounded-full flex items-center justify-center font-bold">
          {{ cart.item_count }}
        </span>
      </a>
    </div>
  </div>
</div>

<script>
  window.addEventListener('scroll', () => {
    const header = document.getElementById('HeaderWrapper');
    if (window.scrollY > 20) {
      header.classList.add('bg-white/95', 'backdrop-blur-sm', 'border-b', 'border-orea-champagne/10', 'py-4', 'md:py-5');
      header.classList.remove('bg-transparent', 'py-6', 'md:py-10');
    } else {
      header.classList.remove('bg-white/95', 'backdrop-blur-sm', 'border-b', 'border-orea-champagne/10', 'py-4', 'md:py-5');
      header.classList.add('bg-transparent', 'py-6', 'md:py-10');
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
