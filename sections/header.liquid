<header class="sticky top-0 z-50 bg-[#f9f9f7]/95 backdrop-blur-sm border-b border-stone-100">
  <div class="container mx-auto px-8 h-24 flex items-center justify-between">
    <!-- Navigation -->
    <nav class="flex-1 hidden md:flex items-center space-x-10 text-[10px] font-semibold uppercase tracking-widest-plus text-stone-600">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="hover:text-black transition-colors">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    <!-- Logo -->
    <div class="flex-1 flex justify-center">
      <a href="/" class="text-4xl font-light tracking-[0.2em] text-black">
        {% if section.settings.logo_text != blank %}
          {{ section.settings.logo_text }}
        {% else %}
          OREA
        {% endif %}
      </a>
    </div>

    <!-- Utilities -->
    <div class="flex-1 flex items-center justify-end space-x-8 text-[10px] font-semibold uppercase tracking-widest-plus text-stone-600">
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="hidden md:block hover:text-black">
          {% if customer %}
            Account
          {% else %}
            Login
          {% endif %}
        </a>
      {% endif %}
      
      <a href="{{ routes.cart_url }}" class="hover:text-black" id="cart-link">
        Bag (<span id="cart-count">{{ cart.item_count }}</span>)
      </a>
      
      <button class="md:hidden p-2" id="mobile-menu-toggle">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2" d="M4 8h16M4 16h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-stone-100">
    <nav class="container mx-auto px-8 py-6 space-y-4">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="block text-[11px] font-semibold uppercase tracking-widest text-stone-600 hover:text-black transition-colors">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>
  </div>
</header>

<script>
  document.getElementById('mobile-menu-toggle')?.addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "OREA"
    }
  ]
}
{% endschema %}