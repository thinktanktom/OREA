{% comment %}
  ORÉA Header/Navbar Section
  Converted from React Navbar component
{% endcomment %}

<header class="orea-header" id="orea-header">
  <div class="header-container">
    <!-- Left Navigation (Desktop) -->
    <nav class="nav-main">
      <div class="nav-item" data-dropdown="shop">
        <span>Shop</span>
      </div>
      <div class="nav-item" data-dropdown="concierge">
        <span>Concierge</span>
      </div>
    </nav>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle lg:hidden" aria-label="Toggle menu" id="mobile-menu-toggle">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>

    <!-- Logo (Center) -->
    <div class="logo-wrapper">
      <a href="/" class="orea-logo">ORÉA</a>
    </div>

    <!-- Right Icons -->
    <div class="nav-icons">
      <a href="/search" class="nav-icon" aria-label="Search">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </a>
      <a href="/account" class="nav-icon" aria-label="Account">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>
      <a href="{{ routes.cart_url }}" class="nav-icon" aria-label="Cart">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="cart-count" data-cart-count>{{ cart.item_count }}</span>
      </a>
    </div>
  </div>

  <!-- Shop Dropdown -->
  <div class="dropdown" id="shop-dropdown">
    <div class="dropdown-container">
      <div style="width: 180px; padding-top: 1.6rem;">
        <ul class="dropdown-links">
          <li><a href="/collections/rings" class="dropdown-link">RINGS</a></li>
          <li><a href="/collections/necklaces" class="dropdown-link">NECKLACES</a></li>
          <li><a href="/collections/earrings" class="dropdown-link">EARRINGS</a></li>
          <li><a href="/collections/bracelets" class="dropdown-link">BRACELETS</a></li>
          <li><a href="/collections/pendants" class="dropdown-link">PENDANTS</a></li>
          <li><a href="/collections/gift-cards" class="dropdown-link">GIFT CARDS</a></li>
        </ul>
      </div>
      <div style="width: 100%; max-width: 380px;">
        <a href="/collections/all" style="display: block; margin-bottom: 4rem;">
          <div style="position: relative; aspect-ratio: 4/5; overflow: hidden; background-color: var(--color-orea-linen);">
            <img src="{{ 'signature-product.jpg' | asset_url }}" alt="Featured Product" style="width: 100%; height: 100%; object-fit: cover; filter: grayscale(15%); transition: transform 3s ease;">
          </div>
        </a>
        <a href="/collections/all" style="display: inline-flex; align-items: center; gap: 2.4rem; font-size: 1rem; letter-spacing: 0.4em; text-transform: uppercase; border-bottom: 1px solid rgba(74,63,53,0.1); padding-bottom: 0.8rem; transition: all 0.5s ease;">
          <span style="font-weight: 500;">View All Pieces</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
      <div style="width: 100%; max-width: 380px;">
        <a href="/pages/bespoke" style="display: block; margin-bottom: 4rem;">
          <div style="position: relative; aspect-ratio: 4/5; overflow: hidden; background-color: var(--color-orea-linen);">
            <img src="{{ 'bespoke-journey.jpg' | asset_url }}" alt="Bespoke Journey" style="width: 100%; height: 100%; object-fit: cover; filter: grayscale(20%); transition: transform 3s ease;">
          </div>
        </a>
        <div>
          <a href="/pages/bespoke" style="font-size: 1.1rem; letter-spacing: 0.15em; display: flex; align-items: center; gap: 1.2rem;">
            <span style="opacity: 0.8;">Looking for something custom?</span>
            <span style="color: var(--color-orea-gold); margin: 0 1.2rem;">→</span>
            <span style="text-transform: uppercase; letter-spacing: 0.3em; font-weight: 500; border-bottom: 1px solid transparent; transition: border-color 0.3s ease;">Begin Bespoke</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Concierge Dropdown -->
  <div class="dropdown" id="concierge-dropdown">
    <div class="dropdown-container" style="grid-template-columns: repeat(3, 1fr);">
      <div>
        <h4 style="font-size: 1rem; letter-spacing: 0.6em; text-transform: uppercase; font-weight: 600; margin-bottom: 4rem; color: var(--color-orea-dark);">ABOUT</h4>
        <ul class="dropdown-links">
          <li><a href="/pages/about" class="dropdown-link">Our Story</a></li>
          <li><a href="/pages/diamonds" class="dropdown-link">About Lab-Grown Diamonds</a></li>
        </ul>
      </div>
      <div>
        <h4 style="font-size: 1rem; letter-spacing: 0.6em; text-transform: uppercase; font-weight: 600; margin-bottom: 4rem; color: var(--color-orea-dark);">BESPOKE</h4>
        <ul class="dropdown-links">
          <li><a href="/pages/bespoke" class="dropdown-link highlighted">Bespoke Process</a></li>
          <li><a href="/pages/concierge" class="dropdown-link">Concierge Service</a></li>
        </ul>
      </div>
      <div>
        <h4 style="font-size: 1rem; letter-spacing: 0.6em; text-transform: uppercase; font-weight: 600; margin-bottom: 4rem; color: var(--color-orea-dark);">CLIENT CARE</h4>
        <ul class="dropdown-links">
          <li><a href="/pages/faq" class="dropdown-link">Client Care</a></li>
          <li><a href="/pages/care-guide" class="dropdown-link">Jewellery Care</a></li>
          <li><a href="/pages/shipping" class="dropdown-link">Delivery</a></li>
          <li><a href="/pages/returns" class="dropdown-link">Returns</a></li>
          <li><a href="/pages/contact" class="dropdown-link highlighted">Begin a Conversation</a></li>
        </ul>
      </div>
    </div>
  </div>
</header>

<!-- Mobile Menu -->
<div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
<div class="mobile-menu" id="mobile-menu">
  <button class="mobile-menu-close" id="mobile-menu-close" style="position: absolute; top: 2.4rem; right: 2.4rem; cursor: pointer;">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
  
  <nav style="margin-top: 4.8rem;">
    <div style="margin-bottom: 4.8rem;">
      <h4 style="font-size: 0.9rem; letter-spacing: 0.4em; text-transform: uppercase; color: var(--color-orea-taupe); margin-bottom: 2.4rem; font-weight: 600;">SHOP</h4>
      <ul style="display: flex; flex-direction: column; gap: 2rem;">
        <li><a href="/collections/rings" style="font-size: 1.4rem; letter-spacing: 0.1em;">Rings</a></li>
        <li><a href="/collections/necklaces" style="font-size: 1.4rem; letter-spacing: 0.1em;">Necklaces</a></li>
        <li><a href="/collections/earrings" style="font-size: 1.4rem; letter-spacing: 0.1em;">Earrings</a></li>
        <li><a href="/collections/bracelets" style="font-size: 1.4rem; letter-spacing: 0.1em;">Bracelets</a></li>
        <li><a href="/collections/pendants" style="font-size: 1.4rem; letter-spacing: 0.1em;">Pendants</a></li>
      </ul>
    </div>

    <div style="margin-bottom: 4.8rem;">
      <h4 style="font-size: 0.9rem; letter-spacing: 0.4em; text-transform: uppercase; color: var(--color-orea-taupe); margin-bottom: 2.4rem; font-weight: 600;">ABOUT</h4>
      <ul style="display: flex; flex-direction: column; gap: 2rem;">
        <li><a href="/pages/about" style="font-size: 1.4rem; letter-spacing: 0.1em;">Our Story</a></li>
        <li><a href="/pages/diamonds" style="font-size: 1.4rem; letter-spacing: 0.1em;">About Diamonds</a></li>
        <li><a href="/pages/bespoke" style="font-size: 1.4rem; letter-spacing: 0.1em;">Bespoke</a></li>
        <li><a href="/pages/concierge" style="font-size: 1.4rem; letter-spacing: 0.1em;">Concierge</a></li>
      </ul>
    </div>

    <div>
      <h4 style="font-size: 0.9rem; letter-spacing: 0.4em; text-transform: uppercase; color: var(--color-orea-taupe); margin-bottom: 2.4rem; font-weight: 600;">HELP</h4>
      <ul style="display: flex; flex-direction: column; gap: 2rem;">
        <li><a href="/pages/contact" style="font-size: 1.4rem; letter-spacing: 0.1em;">Contact</a></li>
        <li><a href="/pages/faq" style="font-size: 1.4rem; letter-spacing: 0.1em;">FAQ</a></li>
        <li><a href="/pages/care-guide" style="font-size: 1.4rem; letter-spacing: 0.1em;">Care Guide</a></li>
        <li><a href="/pages/shipping" style="font-size: 1.4rem; letter-spacing: 0.1em;">Shipping</a></li>
        <li><a href="/pages/returns" style="font-size: 1.4rem; letter-spacing: 0.1em;">Returns</a></li>
      </ul>
    </div>
  </nav>
</div>

<style>
  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: var(--color-orea-gold);
    color: var(--color-orea-cream);
    font-size: 1rem;
    font-weight: 600;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-icon {
    position: relative;
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image (optional)"
    }
  ]
}
{% endschema %}
