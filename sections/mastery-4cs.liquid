{% comment %}
  ORÉA Mastery of the 4Cs Section
  Add this file to: sections/mastery-4cs.liquid
{% endcomment %}

<section class="bg-white border-y border-stone-100 overflow-hidden py-32" id="mastery-4cs">
  <div class="max-w-[1600px] mx-auto px-8 mb-24">
    <div class="flex flex-col items-center text-center">
      <div class="space-y-12 max-w-4xl">
        <div class="space-y-4">
          <h2 class="text-5xl md:text-7xl font-light text-stone-900 leading-tight tracking-tight serif">{{ section.settings.heading }}</h2>
        </div>
        
        <div class="space-y-4 max-w-2xl mx-auto border-t border-stone-100 pt-12">
          <p class="text-stone-900 text-xl md:text-2xl leading-relaxed serif">
            {{ section.settings.subheading }}
          </p>
          <p class="text-stone-500 font-light text-base md:text-lg leading-relaxed">
            {{ section.settings.description_1 }}
          </p>
          <p class="text-stone-500 font-light text-base md:text-lg leading-relaxed">
            {{ section.settings.description_2 }}
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-[1400px] mx-auto px-8">
    <div class="flex justify-center border-b border-stone-100 overflow-x-auto no-scrollbar">
      <button data-4cs-tab="cut" class="fourcs-tab group px-8 md:px-16 py-8 transition-all relative flex flex-col items-center space-y-2 text-stone-900">
        <span class="text-[11px] uppercase tracking-[0.5em] font-bold">Cut</span>
        <div class="fourcs-tab-underline absolute bottom-0 left-0 right-0 h-[1px] bg-stone-900 z-10"></div>
      </button>
      <button data-4cs-tab="color" class="fourcs-tab group px-8 md:px-16 py-8 transition-all relative flex flex-col items-center space-y-2 text-stone-300 hover:text-stone-500">
        <span class="text-[11px] uppercase tracking-[0.5em] font-bold">Color</span>
      </button>
      <button data-4cs-tab="clarity" class="fourcs-tab group px-8 md:px-16 py-8 transition-all relative flex flex-col items-center space-y-2 text-stone-300 hover:text-stone-500">
        <span class="text-[11px] uppercase tracking-[0.5em] font-bold">Clarity</span>
      </button>
      <button data-4cs-tab="carat" class="fourcs-tab group px-8 md:px-16 py-8 transition-all relative flex flex-col items-center space-y-2 text-stone-300 hover:text-stone-500">
        <span class="text-[11px] uppercase tracking-[0.5em] font-bold">Carat</span>
      </button>
    </div>
  </div>

  <div class="max-w-[1600px] mx-auto px-4 md:px-12 mt-12">
    <div class="bg-[#FBFBFA] border border-stone-100 min-h-[800px] relative shadow-sm overflow-hidden">
      <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: radial-gradient(circle, #000 0.5px, transparent 0.5px); background-size: 30px 30px;"></div>
      
      <div class="relative z-10 h-full">
        {% render 'fourcs-cut', section: section %}
        {% render 'fourcs-color', section: section %}
        {% render 'fourcs-clarity', section: section %}
        {% render 'fourcs-carat', section: section %}
      </div>
    </div>
  </div>

  <div class="max-w-[1600px] mx-auto px-8 mt-24 flex flex-col items-center space-y-6">
    <div class="text-center space-y-4">
      <p class="text-[10px] uppercase tracking-[0.4em] text-stone-400 font-medium">
        {{ section.settings.bottom_note }}
      </p>
      <div class="w-12 h-px bg-stone-200 mx-auto"></div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('[data-4cs-tab]');
  const contents = document.querySelectorAll('[data-4cs-content]');
  
  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const targetTab = this.getAttribute('data-4cs-tab');
      
      // Update tab states
      tabs.forEach(t => {
        t.classList.remove('text-stone-900');
        t.classList.add('text-stone-300', 'hover:text-stone-500');
        const underline = t.querySelector('.fourcs-tab-underline');
        if (underline) underline.remove();
      });
      
      this.classList.remove('text-stone-300', 'hover:text-stone-500');
      this.classList.add('text-stone-900');
      
      const underlineEl = document.createElement('div');
      underlineEl.className = 'fourcs-tab-underline absolute bottom-0 left-0 right-0 h-[1px] bg-stone-900 z-10';
      this.appendChild(underlineEl);
      
      // Show/hide content
      contents.forEach(content => {
        if (content.getAttribute('data-4cs-content') === targetTab) {
          content.classList.remove('hidden');
        } else {
          content.classList.add('hidden');
        }
      });
    });
  });
});
</script>

