{% comment %}
  Section: ORÉA Luxury Category Grid
  Author: World-Class Frontend Engineer
  Description: A minimal, editorial category grid for Shopify OS 2.0.
  Configuration: 2 columns mobile, 3 columns desktop.
{% endcomment %}

{{ 'https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Montserrat:wght@300;400;500&display=swap' | tag: 'stylesheet' }}

<style>
  .orea-category-grid-container {
    background-color: #F9F6F1;
    padding: 60px 20px;
    font-family: 'Montserrat', sans-serif;
  }
  .orea-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  @media (min-width: 1024px) {
    .orea-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 60px 40px;
    }
    .orea-category-grid-container {
      padding: 100px 40px;
    }
  }
  .orea-tile {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.3s ease;
  }
  .orea-image-wrapper {
    width: 100%;
    aspect-ratio: 3 / 4;
    background-color: #E8DFD3;
    margin-bottom: 24px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .orea-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0.9;
  }
  .orea-tile:hover img {
    transform: scale(1.03);
    opacity: 1;
  }
  .orea-category-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: 10px;
    color: #4A3F35;
    text-transform: uppercase;
    letter-spacing: 0.4em;
    transition: color 0.3s ease;
  }
  .orea-tile:hover .orea-category-name {
    color: #7D6B5C;
  }
  .orea-placeholder {
    width: 100%;
    height: 100%;
    background-color: #E8DFD3;
    color: #7D6B5C;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.4;
  }
</style>

<div class="orea-category-grid-container">
  <div class="orea-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link | default: '#' }}" class="orea-tile" {{ block.shopify_attributes }}>
        <div class="orea-image-wrapper">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', alt: block.settings.title }}
          {% else %}
            <div class="orea-placeholder">
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
        <span class="orea-category-name">{{ block.settings.title }}</span>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Luxury Category Grid",
  "max_blocks": 5,
  "settings": [],
  "blocks": [
    {
      "type": "category",
      "name": "Category Tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Name",
          "default": "Category"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ORÉA Category Grid",
      "blocks": [
        { "type": "category", "settings": { "title": "Rings" } },
        { "type": "category", "settings": { "title": "Necklaces" } },
        { "type": "category", "settings": { "title": "Earrings" } },
        { "type": "category", "settings": { "title": "Bracelets" } },
        { "type": "category", "settings": { "title": "Pendants" } }
      ]
    }
  ]
}
{% endschema %}