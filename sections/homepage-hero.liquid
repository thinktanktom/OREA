{% comment %}
  ORÉA Fine Jewellery - Homepage Hero Section
  ===========================================
  Full-width hero with three-line headline and optional hero image.
  Converted from: components/Hero.tsx
  
  Features:
  - Stacked headline with line breaks
  - Hero image slot with aspect ratio
  - Editable through Shopify admin
{% endcomment %}

<section class="relative min-h-[60vh] md:min-h-[70vh] flex flex-col items-center justify-center bg-bone pt-24 md:pt-32 pb-16 md:pb-20 overflow-hidden">
  
  <!-- Hero Content -->
  <div class="w-full max-w-5xl mx-auto px-6 text-center space-y-8 md:space-y-12 z-10">
    <div class="space-y-6 md:space-y-8 max-w-4xl mx-auto">
      
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif text-stone-900 leading-tight tracking-tight">
        {{ section.settings.heading_line_1 | default: 'Modern fine jewellery.' }}<br>
        {{ section.settings.heading_line_2 | default: 'Solid precious metals.' }}<br>
        {{ section.settings.heading_line_3 | default: 'Lab-grown diamonds only.' }}
      </h1>
      
      {% if section.settings.subheading != blank %}
        <p class="text-lg md:text-xl text-stone-500 font-light max-w-2xl mx-auto">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
      
      {% if section.settings.cta_text != blank %}
        <div class="pt-4">
          <a 
            href="{{ section.settings.cta_link | default: '/collections/all' }}"
            class="inline-block px-10 md:px-12 py-4 md:py-5 bg-stone-900 text-white text-[10px] md:text-[11px] uppercase tracking-[0.4em] font-bold hover:bg-stone-800 transition-all duration-500"
          >
            {{ section.settings.cta_text }}
          </a>
        </div>
      {% endif %}
      
    </div>
  </div>
  
  <!-- Hero Image -->
  {% if section.settings.hero_image != blank %}
    <div class="w-full max-w-6xl mx-auto px-6 mt-16 md:mt-24">
      <div class="aspect-[21/9] overflow-hidden border border-stone-100">
        <img 
          src="{{ section.settings.hero_image | image_url: width: 1600 }}"
          alt="{{ section.settings.hero_image_alt | default: shop.name }}"
          class="w-full h-full object-cover"
          loading="eager"
        />
      </div>
    </div>
  {% else %}
    <!-- Image Placeholder -->
    <div class="w-full max-w-6xl mx-auto px-6 mt-16 md:mt-24">
      <div class="aspect-[21/9] bg-stone-50 border border-stone-100 flex items-center justify-center overflow-hidden">
        <span class="text-[9px] md:text-[10px] uppercase tracking-[0.4em] text-stone-300 font-bold">
          Hero Brand Image
        </span>
      </div>
    </div>
  {% endif %}

</section>

{% schema %}
{
  "name": "Homepage Hero",
  "tag": "section",
  "class": "homepage-hero",
  "settings": [
    {
      "type": "header",
      "content": "Headline"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "Modern fine jewellery."
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading Line 2",
      "default": "Solid precious metals."
    },
    {
      "type": "text",
      "id": "heading_line_3",
      "label": "Heading Line 3",
      "default": "Lab-grown diamonds only."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading (optional)",
      "info": "Optional text below the headline"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "info": "Leave blank to hide button"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Hero Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Recommended size: 1600x686 pixels (21:9 aspect ratio)"
    },
    {
      "type": "text",
      "id": "hero_image_alt",
      "label": "Image Alt Text",
      "default": "ORÉA Fine Jewellery"
    }
  ],
  "presets": [
    {
      "name": "Homepage Hero"
    }
  ]
}
{% endschema %}
