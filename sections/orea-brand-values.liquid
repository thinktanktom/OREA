{% comment %}
  ORÉA Fine Jewellery - Brand Values Section
  =========================================
  Three-column brand value propositions
  Converted from: components/BrandValues.tsx
  
  Features:
  - Responsive 3-column grid
  - Icons with text labels
  - Minimal, elegant layout
{% endcomment %}

<section class="py-20 md:py-32 bg-white border-y border-orea-champagne/10">
  <div class="max-w-[1400px] mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 items-stretch">
      
      <!-- Value 1: Lab-Grown -->
      <div class="flex flex-col items-center text-center space-y-6 px-4 md:px-8 py-10 md:py-0 border-b border-orea-champagne/10 md:border-b-0">
        <!-- Icon: Sparkle -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-orea-gold">
          <path d="M12 2v20M2 12h20M5.5 5.5l13 13M18.5 5.5l-13 13"/>
        </svg>
        
        <div class="flex flex-col items-center space-y-2.5">
          <span class="text-orea-dark text-[10px] tracking-[0.4em] uppercase font-semibold leading-none">
            {{ section.settings.value1_title | default: "Lab-Grown Only" }}
          </span>
          <span class="text-orea-taupe text-[8px] tracking-[0.3em] uppercase font-light leading-none">
            {{ section.settings.value1_subtitle | default: "Never mined." }}
          </span>
        </div>
      </div>

      <!-- Value 2: Solid Gold -->
      <div class="flex flex-col items-center text-center space-y-6 px-4 md:px-8 py-10 md:py-0 md:border-x md:border-orea-champagne/30 border-b border-orea-champagne/10 md:border-b-0">
        <!-- Icon: Shield Check -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-orea-gold">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          <path d="m9 12 2 2 4-4"/>
        </svg>
        
        <div class="flex flex-col items-center space-y-2.5">
          <span class="text-orea-dark text-[10px] tracking-[0.4em] uppercase font-semibold leading-none">
            {{ section.settings.value2_title | default: "Solid Gold - Always" }}
          </span>
          <span class="text-orea-taupe text-[8px] tracking-[0.3em] uppercase font-light leading-none">
            {{ section.settings.value2_subtitle | default: "14k, 18k, Platinum" }}
          </span>
        </div>
      </div>

      <!-- Value 3: Made to Order -->
      <div class="flex flex-col items-center text-center space-y-6 px-4 md:px-8 py-10 md:py-0">
        <!-- Icon: Map Pin -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-orea-gold">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        
        <div class="flex flex-col items-center space-y-2.5">
          <span class="text-orea-dark text-[10px] tracking-[0.4em] uppercase font-semibold leading-none">
            {{ section.settings.value3_title | default: "Made to Order" }}
          </span>
          <span class="text-orea-taupe text-[8px] tracking-[0.3em] uppercase font-light leading-none">
            {{ section.settings.value3_subtitle | default: "Crafted with care." }}
          </span>
        </div>
      </div>
      
    </div>
  </div>
</section>

