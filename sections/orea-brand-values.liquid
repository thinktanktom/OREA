    },
    {
      "type": "text",
      "id": "value_2_title",
      "label": "Title",
      "default": "Solid Gold - Always"
    },
    {
      "type": "text",
      "id": "value_2_subtitle",
      "label": "Subtitle",
      "default": "14k, 18k, Platinum"
    },
    {
      "type": "header",
      "content": "Value 3"
    },
    {
      "type": "text",
      "id": "value_3_title",
      "label": "Title",
      "default": "Made to Order"
    },
    {
