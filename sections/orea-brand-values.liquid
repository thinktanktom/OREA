{% comment %}
  ORÉA Fine Jewellery - Brand Values Section
  ==========================================
  Converted from: components/BrandValues.tsx
  
  Three-column value propositions:
  1. Lab-Grown Only
  2. Solid Gold - Always
  3. Made to Order
  
  FIXED: Uses standard Tailwind colors instead of custom ones
{% endcomment %}

<section class="py-20 md:py-32 bg-white border-y border-stone-100">
  <div class="max-w-[1400px] mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 items-stretch">
      
      {%comment%} Value 1: Lab-Grown {%endcomment%}
      <div class="flex flex-col items-center text-center space-y-6 px-4 md:px-8 py-10 md:py-0 border-b border-stone-100 md:border-b-0">
        <!-- Sparkle Icon -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-amber-600">
          <path d="M12 3v18M3 12h18"></path>
          <path d="m4.93 4.93 14.14 14.14M18.36 5.64 5.64 18.36"></path>
        </svg>
        
        <div class="flex flex-col items-center space-y-2.5">
          <span class="text-stone-900 text-[10px] tracking-[0.4em] uppercase font-semibold leading-none">
            {{ section.settings.value_1_title | default: 'Lab-Grown Only' }}
          </span>
          <span class="text-stone-500 text-[8px] tracking-[0.3em] uppercase font-light leading-none">
            {{ section.settings.value_1_subtitle | default: 'Never mined.' }}
          </span>
        </div>
      </div>

      {%comment%} Value 2: Solid Gold {%endcomment%}
      <div class="flex flex-col items-center text-center space-y-6 px-4 md:px-8 py-10 md:py-0 md:border-x md:border-stone-200 border-b border-stone-100 md:border-b-0">
        <!-- Shield Check Icon -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-amber-600">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          <path d="m9 12 2 2 4-4"></path>
        </svg>
        
        <div class="flex flex-col items-center space-y-2.5">
          <span class="text-stone-900 text-[10px] tracking-[0.4em] uppercase font-semibold leading-none">
            {{ section.settings.value_2_title | default: 'Solid Gold - Always' }}
          </span>
          <span class="text-stone-500 text-[8px] tracking-[0.3em] uppercase font-light leading-none">
            {{ section.settings.value_2_subtitle | default: '14k, 18k, Platinum' }}
          </span>
        </div>
      </div>

      {%comment%} Value 3: Made to Order {%endcomment%}
      <div class="flex flex-col items-center text-center space-y-6 px-4 md:px-8 py-10 md:py-0">
        <!-- Map Pin Icon -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-amber-600">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        
        <div class="flex flex-col items-center space-y-2.5">
          <span class="text-stone-900 text-[10px] tracking-[0.4em] uppercase font-semibold leading-none">
            {{ section.settings.value_3_title | default: 'Made to Order' }}
          </span>
          <span class="text-stone-500 text-[8px] tracking-[0.3em] uppercase font-light leading-none">
            {{ section.settings.value_3_subtitle | default: 'Crafted with care.' }}
          </span>
        </div>
      </div>
      
    </div>
  </div>
</section>

