{% comment %}
  Home Collections Section
  Converted from: src/pages/home/Collections.tsx
{% endcomment %}

<section class="home-collections pt-24 md:pt-72 pb-20 md:pb-32 bg-white overflow-hidden">
  <div class="max-w-[1600px] mx-auto px-6 md:px-16 lg:px-24 space-y-24 md:space-y-64">
    
    {% for block in section.blocks %}
      <div class="flex flex-col md:flex-row gap-8 md:gap-24 items-center md:items-end {% if forloop.index == 2 %}md:flex-row-reverse{% endif %}">
        
        <!-- Image Container -->
        <div class="w-full md:w-3/5 lg:w-[55%] group">
          <a href="{{ block.settings.link }}" class="relative block w-full aspect-[3/4] overflow-hidden bg-orea-linen shadow-sm">
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | img_url: '1200x' }}" 
                alt="{{ block.settings.title }}"
                class="w-full h-full object-cover grayscale-[5%] transition-transform duration-[3s] ease-out group-hover:scale-105"
                loading="lazy"
              >
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
            {% endif %}
            <div class="absolute inset-0 bg-orea-dark/0 group-hover:bg-orea-dark/[0.02] transition-colors duration-1000"></div>
          </a>
        </div>

        <!-- Content Area -->
        <div class="w-full md:w-2/5 lg:w-[45%] pb-4 {% if forloop.index == 2 %}text-center md:text-right{% endif %}">
          <div class="space-y-8 max-w-md {% if forloop.index == 2 %}mx-auto md:ml-auto md:mr-0{% endif %}">
            <div class="space-y-6">
              <h2 class="text-[11px] md:text-[12px] tracking-[0.5em] uppercase font-bold text-orea-dark">
                {{ block.settings.title }}
              </h2>
              
              {% if block.settings.description != blank %}
                <p class="text-lg md:text-xl leading-relaxed text-orea-brown font-light">
                  {{ block.settings.description }}
                </p>
              {% endif %}
            </div>

            <a 
              href="{{ block.settings.link }}" 
              class="inline-flex items-center space-x-6 text-[10px] tracking-[0.4em] uppercase text-orea-dark border-b border-orea-dark/20 pb-2 hover:border-orea-dark hover:text-orea-gold transition-all duration-500 group {% if forloop.index == 2 %}justify-center md:justify-end w-full{% endif %}"
            >
              <span class="font-semibold">{{ block.settings.button_label | default: 'Explore Collection' }}</span>
              <svg class="w-4 h-4 group-hover:translate-x-2 transition-transform duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Home Collections",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "RINGS"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "For the lasting moments."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Explore Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
