{% comment %}
  Homepage Collections Section
  Featured collections with images
{% endcomment %}

<section class="collection-section">
  <div class="collection-container">
    {% for block in section.blocks %}
      <div class="collection-item {% cycle 'odd', 'even' %}">
        <div class="collection-image-wrapper">
          <a href="{{ block.settings.collection_link }}" class="collection-image-link">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 1200 | image_tag: class: 'collection-image', alt: block.settings.title }}
            {% else %}
              <div style="width: 100%; height: 100%; background-color: var(--color-orea-linen);"></div>
            {% endif %}
            <div class="collection-image-overlay"></div>
          </a>
        </div>

        <div class="collection-content {% if forloop.index == 2 %}center{% else %}left{% endif %}">
          <p class="collection-category">{{ block.settings.category }}</p>
          <h2 class="collection-title">{{ block.settings.title }}</h2>
          <p class="collection-description">{{ block.settings.description }}</p>
          
          <a href="{{ block.settings.collection_link }}" class="collection-cta">
            <span>{{ block.settings.cta_text | default: "Explore" }}</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Homepage Collections",
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Category"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "collection_link",
          "label": "Collection Link"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text",
          "default": "Explore"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Collections",
      "blocks": [
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
