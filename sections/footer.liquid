{% comment %}
  ORÉA Footer Section
  Converted from React Footer component
{% endcomment %}

<footer class="orea-footer">
  <div class="footer-container">
    <div class="footer-grid">
      <!-- Column 1 - SHOP -->
      <div class="footer-column">
        <h4>SHOP</h4>
        <ul class="footer-links">
          <li><a href="/collections/rings" class="footer-link">Rings</a></li>
          <li><a href="/collections/necklaces" class="footer-link">Necklaces</a></li>
          <li><a href="/collections/earrings" class="footer-link">Earrings</a></li>
          <li><a href="/collections/bracelets" class="footer-link">Bracelets</a></li>
          <li><a href="/collections/pendants" class="footer-link">Pendants</a></li>
        </ul>
      </div>

      <!-- Column 2 - HELP -->
      <div class="footer-column">
        <h4>HELP</h4>
        <ul class="footer-links">
          <li><a href="/pages/faq" class="footer-link">FAQs</a></li>
          <li><a href="/pages/contact" class="footer-link">Contact Us</a></li>
          <li><a href="/pages/care-guide" class="footer-link">Care Guide</a></li>
          <li><a href="/pages/shipping" class="footer-link">Shipping & Delivery</a></li>
          <li><a href="/pages/returns" class="footer-link">Returns & Exchanges</a></li>
        </ul>
      </div>

      <!-- Column 3 - Newsletter -->
      <div class="footer-column">
        <div style="margin-bottom: 4rem;">
          <h4>JOIN OUR COMMUNITY</h4>
          <div style="margin-bottom: 0.8rem;">
            <p style="font-size: 1rem; letter-spacing: 0.1em; text-transform: uppercase; font-weight: 500; line-height: 1.8; margin-bottom: 0;">
              Receive $25 off your first order.
            </p>
          </div>
          <div>
            <p style="font-size: 1rem; letter-spacing: 0.1em; color: rgba(217, 207, 193, 0.7); font-weight: 300; line-height: 1.8; text-transform: uppercase; margin: 0;">
              Early access to new pieces, private releases, exclusive offers & more.
            </p>
          </div>
        </div>

        <div style="margin-bottom: 2.4rem;">
          {% form 'customer', class: 'newsletter-form' %}
            {% if form.posted_successfully? %}
              <p style="color: var(--color-orea-gold); font-size: 1rem;">Thanks for subscribing!</p>
            {% else %}
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="EMAIL ADDRESS"
                class="newsletter-input"
                required
              />
              <button type="submit" class="newsletter-submit">JOIN</button>
            {% endif %}
          {% endform %}
        </div>

        <!-- Social Icons -->
        <div class="social-icons">
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="social-icon" aria-label="Instagram" target="_blank" rel="noopener">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="social-icon" aria-label="Facebook" target="_blank" rel="noopener">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.2">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p>© ORÉA {{ 'now' | date: '%Y' }}</p>
      <div class="footer-bottom-links">
        <a href="/pages/terms">Terms & Conditions</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    }
  ]
}
{% endschema %}
