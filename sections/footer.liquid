<footer class="bg-[#f9f9f7] border-t border-stone-200 pt-32 pb-16">
  <div class="container mx-auto px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-16 mb-24">
      <!-- Brand -->
      <div class="space-y-8">
        <h5 class="text-3xl font-light tracking-[0.2em]">{{ section.settings.brand_name }}</h5>
        <p class="text-[13px] text-stone-500 font-light leading-relaxed max-w-xs">
          {{ section.settings.brand_description }}
        </p>
      </div>
      
      <!-- Collections -->
      <div class="space-y-6">
        <h6 class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Collections</h6>
        <ul class="text-[13px] space-y-3 text-stone-600 font-light">
          {% for link in linklists.footer-collections.links %}
            <li>
              <a href="{{ link.url }}" class="hover:text-black transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Concierge -->
      <div class="space-y-6">
        <h6 class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Concierge</h6>
        <ul class="text-[13px] space-y-3 text-stone-600 font-light">
          {% for link in linklists.footer-concierge.links %}
            <li>
              <a href="{{ link.url }}" class="hover:text-black transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="space-y-6">
        <h6 class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Journal</h6>
        <p class="text-[13px] text-stone-600 font-light">{{ section.settings.newsletter_text }}</p>
        
        {% form 'customer', class: 'flex border-b border-stone-300 pb-2 group' %}
          {% if form.posted_successfully? %}
            <p class="text-[11px] text-green-600">Thanks for subscribing!</p>
          {% else %}
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Email Address" 
              class="bg-transparent text-[13px] w-full focus:outline-none placeholder:text-stone-300"
              required
            />
            <button type="submit" class="text-[10px] font-bold uppercase tracking-widest text-stone-400 hover:text-black transition-colors">
              Subscribe
            </button>
          {% endif %}
        {% endform %}
      </div>
    </div>

    <div class="flex flex-col md:flex-row justify-between items-center pt-12 border-t border-stone-200 space-y-6 md:space-y-0">
      <p class="text-[10px] text-stone-400 uppercase tracking-widest">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </p>
      
      <div class="flex space-x-8 text-[10px] text-stone-400 uppercase tracking-widest font-bold">
        {% for link in linklists.footer-social.links %}
          <a href="{{ link.url }}" class="hover:text-black transition-colors" target="_blank" rel="noopener">
            {{ link.title }}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "OREA"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand Description",
      "default": "Handcrafting timeless artifacts for modern love. Designed and made in Auckland, New Zealand."
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Sign up to receive our seasonal journal on craft and design."
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Aotearoa."
    }
  ]
}
{% endschema %}