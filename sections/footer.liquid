{% comment %}
  DIAGNOSTIC FOOTER - Use this to identify the issue
  ==================================================
  This version has visible test text to see what's rendering
{% endcomment %}

<footer class="bg-stone-900 text-white py-24 px-6">
  <div class="max-w-7xl mx-auto">
    
    <h1 class="text-4xl mb-8">FOOTER DEBUG - Can you see this text?</h1>
    
    <!-- Test 1: Plain HTML text -->
    <div class="mb-12">
      <h3 class="text-2xl mb-4">Test 1: Plain HTML</h3>
      <p>This is plain HTML text. If you can't see this, there's a major issue.</p>
    </div>
    
    <!-- Test 2: Schema settings -->
    <div class="mb-12">
      <h3 class="text-2xl mb-4">Test 2: Schema Settings</h3>
      <p>Brand name from settings: "{{ section.settings.brand_name }}"</p>
      <p>Newsletter heading: "{{ section.settings.newsletter_heading }}"</p>
    </div>
    
    <!-- Test 3: Hardcoded links -->
    <div class="mb-12">
      <h3 class="text-2xl mb-4">Test 3: Hardcoded Links</h3>
      <ul>
        <li><a href="/collections/rings" class="text-white underline">Rings Link</a></li>
        <li><a href="/collections/necklaces" class="text-white underline">Necklaces Link</a></li>
      </ul>
    </div>
    
    <!-- Test 4: Liquid conditionals -->
    <div class="mb-12">
      <h3 class="text-2xl mb-4">Test 4: Conditionals</h3>
      {% if true %}
        <p>✅ Liquid if statements work</p>
      {% else %}
        <p>❌ Liquid if statements broken</p>
      {% endif %}
    </div>
    
    <!-- Test 5: Linklists check -->
    <div class="mb-12">
      <h3 class="text-2xl mb-4">Test 5: Linklists</h3>
      <p>Checking if linklists exist...</p>
      {% if linklists['footer-shop'] %}
        <p>footer-shop menu EXISTS</p>
        <p>Link count: {{ linklists['footer-shop'].links.size }}</p>
      {% else %}
        <p>footer-shop menu DOES NOT EXIST</p>
      {% endif %}
    </div>
    
    <!-- Test 6: The actual footer content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      
      <!-- Column 1: SHOP -->
      <div>
        <h4 class="text-xl mb-6 text-white">SHOP</h4>
        {% if linklists['footer-shop'].links.size > 0 %}
          <p class="mb-4 text-green-400">Using menu links:</p>
          <ul class="space-y-3">
            {% for link in linklists['footer-shop'].links %}
              <li><a href="{{ link.url }}" class="text-white hover:text-gray-300">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% else %}
          <p class="mb-4 text-yellow-400">Using fallback links:</p>
          <ul class="space-y-3 text-white">
            <li><a href="/collections/rings">Rings</a></li>
            <li><a href="/collections/necklaces">Necklaces</a></li>
            <li><a href="/collections/earrings">Earrings</a></li>
            <li><a href="/collections/bracelets">Bracelets</a></li>
            <li><a href="/collections/pendants">Pendants</a></li>
          </ul>
        {% endif %}
      </div>
      
      <!-- Column 2: HELP -->
      <div>
        <h4 class="text-xl mb-6 text-white">HELP</h4>
        <ul class="space-y-3 text-white">
          <li><a href="/pages/faq">FAQs</a></li>
          <li><a href="/pages/contact">Contact Us</a></li>
          <li><a href="/pages/care">Care Guide</a></li>
          <li><a href="/pages/shipping">Shipping</a></li>
          <li><a href="/pages/returns">Returns</a></li>
        </ul>
      </div>
      
      <!-- Column 3: NEWSLETTER -->
      <div>
        <h4 class="text-xl mb-6 text-white">JOIN OUR COMMUNITY</h4>
        <p class="text-white mb-4">Receive $25 off your first order.</p>
        <p class="text-gray-400 mb-6">Early access to new pieces and exclusive offers.</p>
        
        <div class="border-b border-white pb-2 mb-4">
          <input 
            type="email" 
            placeholder="EMAIL ADDRESS" 
            class="bg-transparent text-white placeholder-gray-400 outline-none w-full"
          />
        </div>
        <button class="text-white text-sm font-bold">JOIN</button>
      </div>
      
    </div>
    
    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-gray-700 text-center">
      <p class="text-gray-400 text-sm">© ORÉA {{ 'now' | date: '%Y' }}</p>
    </div>
    
  </div>
</footer>

{% schema %}
{
  "name": "Footer DEBUG",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "ORÉA"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "JOIN OUR COMMUNITY"
    }
  ]
}
{% endschema %}
