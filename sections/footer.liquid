
<footer class="bg-orea-dark text-orea-cream py-24 px-6 md:px-24">
  <div class="max-w-[1800px] mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-16 items-start">
      
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            <div class="flex flex-col space-y-10">
              <h4 class="text-[10px] tracking-[0.4em] uppercase text-orea-champagne font-semibold">{{ block.settings.title }}</h4>
              <ul class="space-y-5 text-[10px] tracking-[0.2em] font-light uppercase">
                {% for link in linklists[block.settings.menu].links %}
                  <li><a href="{{ link.url }}" class="hover:text-orea-gold transition-colors">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          
          {% when 'newsletter' %}
            <div class="flex flex-col space-y-10">
              <div class="space-y-5">
                <h4 class="text-[10px] tracking-[0.4em] uppercase text-orea-champagne font-semibold">{{ block.settings.heading }}</h4>
                <p class="text-[10px] text-orea-oatmeal/70 tracking-[0.1em] uppercase">{{ block.settings.subheading }}</p>
              </div>
              
              {% form 'customer' %}
                <div class="flex border-b border-orea-champagne/20 pb-3">
                  <input type="email" name="contact[email]" placeholder="EMAIL ADDRESS" class="bg-transparent text-[10px] tracking-[0.3em] outline-none flex-1 placeholder:text-orea-taupe text-orea-cream uppercase">
                  <button type="submit" class="text-[10px] tracking-[0.4em] uppercase text-orea-champagne hover:text-orea-gold ml-4 font-semibold">JOIN</button>
                </div>
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="mt-32 pt-10 border-t border-orea-champagne/10 flex flex-col md:flex-row justify-between items-center text-[8px] tracking-[0.4em] uppercase opacity-60">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}</p>
      <div class="flex gap-8">
        <a href="/policies/terms-of-service">Terms</a>
        <a href="/policies/privacy-policy">Privacy</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "title", "label": "Heading" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Join Us" },
        { "type": "text", "id": "subheading", "label": "Subheading" }
      ]
    }
  ]
}
{% endschema %}
