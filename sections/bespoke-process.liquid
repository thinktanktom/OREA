{% comment %}
  ORÉA Fine Jewellery - Bespoke Process Section
  =============================================
  Describes the personalized, considered approach to jewellery selection.
  Converted from: components/BespokeProcess.tsx
  
  Features:
  - Centered text content
  - CTA to bespoke page
  - Optional studio/process image
{% endcomment %}

<section class="max-w-4xl mx-auto py-24 md:py-32 space-y-16 md:space-y-24">
  
  <!-- Text Content -->
  <div class="text-center space-y-6 md:space-y-8 px-6">
    
    <!-- Eyebrow -->
    <h4 class="text-[10px] uppercase tracking-[0.6em] text-stone-400 font-bold">
      {{ section.settings.eyebrow | default: 'A More Personal Way to Choose' }}
    </h4>
    
    <!-- Headline -->
    <h2 class="text-2xl md:text-3xl font-serif text-stone-900 leading-tight">
      {{ section.settings.headline | default: 'Choosing fine jewellery should feel considered, not transactional.' }}
    </h2>
    
    <!-- Description -->
    <div class="space-y-4 md:space-y-6 text-stone-600 font-light text-base md:text-lg leading-relaxed max-w-3xl mx-auto">
      <p>{{ section.settings.paragraph_1 | default: 'ORÉA offers a thoughtful experience from start to finish, with personalised guidance online or by appointment at our Christchurch studio.' }}</p>
      <p>{{ section.settings.paragraph_2 | default: 'For those seeking something personal, we offer both partial and fully bespoke services.' }}</p>
    </div>
    
    <!-- CTA Button -->
    {% if section.settings.cta_text != blank %}
      <div class="pt-6 md:pt-8">
        <a 
          href="{{ section.settings.cta_link | default: '/pages/bespoke' }}" 
          class="inline-block px-10 md:px-12 py-4 md:py-5 bg-stone-900 text-white text-[10px] md:text-[11px] uppercase tracking-[0.4em] font-bold hover:bg-stone-800 transition-all duration-500"
        >
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
    
  </div>
  
  <!-- Studio Image -->
  <div class="w-full px-6">
    {% if section.settings.studio_image != blank %}
      <div class="aspect-video border border-stone-100 overflow-hidden">
        <img 
          src="{{ section.settings.studio_image | image_url: width: 1200 }}"
          alt="{{ section.settings.studio_image_alt | default: 'ORÉA Studio' }}"
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    {% else %}
      <div class="w-full aspect-video bg-stone-50 border border-stone-100 flex items-center justify-center">
        <span class="text-[9px] uppercase tracking-[0.4em] text-stone-300 font-bold">Studio / Process Image</span>
      </div>
    {% endif %}
  </div>
  
</section>

{% schema %}
{
  "name": "Bespoke Process",
  "tag": "section",
  "class": "bespoke-process-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "A More Personal Way to Choose"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline",
      "default": "Choosing fine jewellery should feel considered, not transactional."
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "Paragraph 1",
      "default": "ORÉA offers a thoughtful experience from start to finish, with personalised guidance online or by appointment at our Christchurch studio."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Paragraph 2",
      "default": "For those seeking something personal, we offer both partial and fully bespoke services."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Discover Bespoke →"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "default": "/pages/bespoke"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "studio_image",
      "label": "Studio/Process Image",
      "info": "Recommended size: 1200x675 pixels (16:9 aspect ratio)"
    },
    {
      "type": "text",
      "id": "studio_image_alt",
      "label": "Image Alt Text",
      "default": "ORÉA Jewellery Studio"
    }
  ],
  "presets": [
    {
      "name": "Bespoke Process"
    }
  ]
}
{% endschema %}
