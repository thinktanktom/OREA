{% comment %}
  ORÉA Fine Jewellery - Featured Products Section
  ==============================================
  Converted from: components/FeaturedProducts.tsx
  
  4-column product grid
  FIXED: Uses standard Tailwind colors + hardcoded fallback products
{% endcomment %}

<section class="pt-32 pb-48 bg-white px-6 md:px-24">
  <div class="max-w-[1800px] mx-auto">
    
    <!-- Section Header -->
    <div class="flex flex-col items-center md:items-start mb-24 text-center">
      <h2 class="font-serif text-2xl md:text-4xl text-stone-900 font-light tracking-tight uppercase">
        {{ section.settings.title | default: 'ORÉA Classics' }}
      </h2>
      <div class="w-12 h-[1px] bg-amber-600/40 mt-8"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-12 gap-y-24">
      
      {% if section.settings.collection != blank and section.settings.collection.products.size > 0 %}
        {%comment%} Use actual products if collection is selected {%endcomment%}
        {% for product in section.settings.collection.products limit: 4 %}
          <div class="group cursor-pointer flex flex-col items-center">
            <a href="{{ product.url }}" class="relative w-full aspect-[3/4] overflow-hidden bg-stone-50 mb-10 shadow-sm group-hover:shadow-xl transition-shadow duration-700">
              {% if product.featured_image %}
                {{ product.featured_image | image_url: width: 800 | image_tag: class: 'w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-110' }}
              {% endif %}
              <div class="absolute inset-0 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-700 hidden lg:flex">
                <span class="bg-white/90 backdrop-blur-sm px-6 py-3 text-[8px] tracking-[0.4em] uppercase font-medium text-stone-900 border border-stone-200">
                  View Piece
                </span>
              </div>
            </a>
            <div class="w-full text-center">
              <h3 class="font-sans text-[10px] tracking-[0.4em] text-stone-900 font-semibold uppercase">
                {{ product.title }}
              </h3>
              <p class="text-[9px] mt-2 text-stone-500">{{ product.price | money }}</p>
            </div>
          </div>
        {% endfor %}
        
      {% else %}
        {%comment%} HARDCODED FALLBACK - Shows placeholder products {%endcomment%}
        
        {% for i in (1..4) %}
          <div class="group cursor-pointer flex flex-col items-center">
            <a href="/collections/all" class="relative w-full aspect-[3/4] overflow-hidden bg-stone-50 mb-10 shadow-sm group-hover:shadow-xl transition-shadow duration-700">
              <div class="w-full h-full flex items-center justify-center">
                <!-- Diamond SVG Icon -->
                <svg class="w-16 h-16 text-stone-200" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M12 2L4.5 9L12 22L19.5 9L12 2Z" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round" />
                  <path d="M4.5 9H19.5" stroke-width="0.8" />
                </svg>
              </div>
              <div class="absolute inset-0 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-700 hidden lg:flex">
                <span class="bg-white/90 backdrop-blur-sm px-6 py-3 text-[8px] tracking-[0.4em] uppercase font-medium text-stone-900 border border-stone-200">
                  View Piece
                </span>
              </div>
            </a>
            <div class="w-full text-center">
              <h3 class="font-sans text-[10px] tracking-[0.4em] text-stone-900 font-semibold uppercase leading-relaxed min-h-[2.5rem] flex items-center justify-center px-4">
                {% case i %}
                  {% when 1 %}
                    The Trilogy Ring
                  {% when 2 %}
                    The Ellipse Ring
                  {% when 3 %}
                    Solitaire Necklace
                  {% when 4 %}
                    The Link Bracelet
                {% endcase %}
              </h3>
              <div class="w-4 h-[1px] bg-stone-200 mx-auto mt-2"></div>
            </div>
          </div>
        {% endfor %}
        
      {% endif %}
    </div>
    
    <!-- View All Link -->
    <div class="mt-24 md:mt-32 text-center">
      <a 
        href="{{ section.settings.view_all_link | default: '/collections/all' }}" 
        class="group inline-flex flex-col items-center space-y-4 text-[10px] tracking-[0.5em] uppercase text-stone-900 font-semibold transition-all duration-500"
      >
        <span>View All Pieces</span>
        <div class="w-24 h-[1px] bg-stone-900/10 relative overflow-hidden">
          <div class="absolute inset-0 bg-stone-900 -translate-x-full group-hover:translate-x-0 transition-transform duration-700 ease-in-out"></div>
        </div>
      </a>
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "ORÉA Featured Products",
  "tag": "section",
  "class": "orea-featured-products",
  "settings": [
    { 
      "type": "text", 
      "id": "title", 
      "label": "Section Title", 
      "default": "ORÉA Classics" 
    },
    { 
      "type": "collection", 
      "id": "collection", 
      "label": "Product Collection",
      "info": "Select a collection to show products. If empty, placeholder products will display."
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    { 
      "name": "ORÉA Featured Products" 
    }
  ]
}
{% endschema %}
