
<section class="pt-32 pb-48 bg-white px-6 md:px-24">
  <div class="max-w-[1800px] mx-auto">
    <div class="flex flex-col items-center md:items-start mb-24 text-center">
      <h2 class="font-serif text-2xl md:text-4xl text-orea-dark font-light tracking-tight uppercase">
        {{ section.settings.title }}
      </h2>
      <div class="w-12 h-[1px] bg-orea-gold/40 mt-8"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-12 gap-y-24">
      {% for product in section.settings.collection.products limit: 4 %}
        <div class="group cursor-pointer flex flex-col items-center">
          <a href="{{ product.url }}" class="relative w-full aspect-[3/4] overflow-hidden bg-orea-cream mb-10 shadow-sm group-hover:shadow-xl transition-shadow duration-700">
            {{ product.featured_image | image_url: width: 800 | image_tag: class: 'w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-110' }}
            <div class="absolute inset-0 items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-700 hidden lg:flex">
              <span class="bg-white/90 backdrop-blur-sm px-6 py-3 text-[8px] tracking-[0.4em] uppercase font-medium text-orea-dark border border-orea-champagne/20">
                View Piece
              </span>
            </div>
          </a>
          <div class="w-full text-center">
            <h3 class="font-sans text-[10px] tracking-[0.4em] text-orea-dark font-semibold uppercase">
              {{ product.title }}
            </h3>
            <p class="text-[9px] mt-2 text-orea-taupe">{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "ORÉA Featured Products",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "ORÉA Classics" },
    { "type": "collection", "id": "collection", "label": "Collection" }
  ],
  "presets": [{ "name": "ORÉA Featured Products" }]
}
{% endschema %}
