{% comment %}
  ORÉA Diamond Comparison Section
  Lab-Grown vs Earth-Mined Diamonds
{% endcomment %}

<section class="px-6 lg:px-20 overflow-hidden relative">
  <div class="max-w-6xl mx-auto text-center mb-24">
    <h2 class="text-3xl md:text-5xl font-light text-stone-900 leading-[1.1] tracking-tight font-serif">
      {{ section.settings.heading }}
    </h2>
  </div>

  <div class="max-w-6xl mx-auto">
    <div class="bg-[#2C2621] text-stone-50 rounded-sm overflow-hidden shadow-2xl relative">
      <div class="absolute inset-0 opacity-10 pointer-events-none" 
           style="background-image: radial-gradient(circle, #fff 0.5px, transparent 0.5px); background-size: 40px 40px;"></div>
      
      <div class="relative z-10 overflow-x-auto">
        <table class="w-full text-left border-collapse min-w-[750px]">
          <thead>
            <tr class="border-b border-white/10">
              <th class="py-10 px-10 text-[9px] uppercase tracking-[0.4em] font-bold text-stone-500 w-1/4">{{ section.settings.col_property }}</th>
              <th class="py-10 px-10 text-[11px] uppercase tracking-[0.4em] font-bold text-stone-200 w-[37.5%]">{{ section.settings.col_lab_grown }}</th>
              <th class="py-10 px-10 text-[11px] uppercase tracking-[0.4em] font-bold text-stone-200 w-[37.5%]">{{ section.settings.col_earth_mined }}</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/5">
            {%- for block in section.blocks -%}
              <tr class="transition-colors">
                <td class="py-8 px-10 text-[10px] font-bold text-stone-400 uppercase tracking-widest">{{ block.settings.property }}</td>
                <td class="py-8 px-10 text-base md:text-lg font-light text-stone-200 font-serif">{{ block.settings.lab_value }}</td>
                <td class="py-8 px-10 text-base md:text-lg font-light text-stone-200 font-serif">{{ block.settings.mined_value }}</td>
              </tr>
            {%- endfor -%}
          </tbody>
        </table>
      </div>
      
      <div class="p-12 border-t border-white/10 bg-white/[0.01] text-center space-y-4">
        <p class="text-[12px] text-stone-500 tracking-wider">
          {{ section.settings.disclaimer }}
        </p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Diamond Comparison",
  "tag": "section",
  "class": "orea-diamond-comparison",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Lab-Grown vs Earth-Mined Diamonds"
    },
    {
      "type": "text",
      "id": "col_property",
      "label": "Property Column Header",
      "default": "Property"
    },
    {
      "type": "text",
      "id": "col_lab_grown",
      "label": "Lab-Grown Column Header",
      "default": "Lab-Grown"
    },
    {
      "type": "text",
      "id": "col_earth_mined",
      "label": "Earth-Mined Column Header",
      "default": "Earth-Mined"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Disclaimer Text",
      "default": "This is a high-level comparison for general guidance."
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "property",
          "label": "Property Name",
          "default": "Property"
        },
        {
          "type": "text",
          "id": "lab_value",
          "label": "Lab-Grown Value",
          "default": "Value"
        },
        {
          "type": "text",
          "id": "mined_value",
          "label": "Earth-Mined Value",
          "default": "Value"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Diamond Comparison",
      "blocks": [
        { "type": "comparison_row", "settings": { "property": "Origin", "lab_value": "Grown in a lab (HPHT or CVD)", "mined_value": "Formed in the earth" } },
        { "type": "comparison_row", "settings": { "property": "Chemical Composition", "lab_value": "Pure carbon", "mined_value": "Pure carbon" } },
        { "type": "comparison_row", "settings": { "property": "Crystal Structure", "lab_value": "Cubic", "mined_value": "Cubic" } },
        { "type": "comparison_row", "settings": { "property": "Hardness (Mohs)", "lab_value": "10 / 10", "mined_value": "10 / 10" } },
        { "type": "comparison_row", "settings": { "property": "Refractive Index", "lab_value": "2.42", "mined_value": "2.42" } },
        { "type": "comparison_row", "settings": { "property": "Dispersion (Fire)", "lab_value": "0.044", "mined_value": "0.044" } },
        { "type": "comparison_row", "settings": { "property": "Appearance", "lab_value": "Same sparkle and brilliance", "mined_value": "Same sparkle and brilliance" } },
        { "type": "comparison_row", "settings": { "property": "Visual Difference", "lab_value": "Indistinguishable to the naked eye", "mined_value": "Indistinguishable to the naked eye" } },
        { "type": "comparison_row", "settings": { "property": "Grading", "lab_value": "Certified by IGI or equivalent", "mined_value": "Certified by GIA or equivalent" } },
        { "type": "comparison_row", "settings": { "property": "Price", "lab_value": "More accessible for comparable quality", "mined_value": "Higher cost due to rarity and mining costs" } },
        { "type": "comparison_row", "settings": { "property": "Environmental Impact", "lab_value": "Lower land disruption", "mined_value": "Mining impact varies" } },
        { "type": "comparison_row", "settings": { "property": "ORÉA Offering", "lab_value": "Always lab-grown", "mined_value": "Not offered" } }
      ]
    }
  ]
}
{% endschema %}
