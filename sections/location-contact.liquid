{% comment %}
  ORÉA Fine Jewellery - Location/Contact Section
  ==============================================
  A call-to-action section encouraging visitors to get in touch.
  Converted from: components/LocationContact.tsx
  
  Features:
  - Centered layout
  - Inviting headline
  - Contact CTA button
{% endcomment %}

<section class="text-center py-32 md:py-40 space-y-12 md:space-y-20 border-t border-stone-50 px-6">
  
  <!-- Content -->
  <div class="space-y-6 md:space-y-8 max-w-3xl mx-auto">
    
    <!-- Eyebrow -->
    <h4 class="text-[10px] uppercase tracking-[0.6em] text-stone-400 font-bold">
      {{ section.settings.eyebrow | default: 'Begin the Conversation' }}
    </h4>
    
    <!-- Headline -->
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-serif text-stone-900 leading-tight">
      {{ section.settings.headline | default: 'Whether you have a clear vision or are just beginning to explore, we are here to guide you.' }}
    </h2>
    
  </div>

  <!-- CTA Button -->
  <div class="flex justify-center pt-4 md:pt-8">
    <a 
      href="{{ section.settings.cta_link | default: '/pages/contact' }}" 
      class="inline-block px-14 md:px-20 py-5 md:py-6 border border-stone-900 text-stone-900 text-[10px] md:text-[11px] uppercase tracking-[0.5em] font-bold hover:bg-stone-900 hover:text-white transition-all duration-500"
    >
      {{ section.settings.cta_text | default: 'Contact ORÉA →' }}
    </a>
  </div>
  
</section>

{% schema %}
{
  "name": "Location Contact",
  "tag": "section",
  "class": "location-contact-section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Begin the Conversation"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline",
      "default": "Whether you have a clear vision or are just beginning to explore, we are here to guide you."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Contact ORÉA →"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "default": "/pages/contact"
    }
  ],
  "presets": [
    {
      "name": "Location Contact"
    }
  ]
}
{% endschema %}
