  {
    "name": "Brand Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#FDFCFB",
        "info": "Main background color (Bone)"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#1A1A1A",
