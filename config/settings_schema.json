        "default": "large"
      },
      {
        "type": "header",
        "content": "Product Features"
      },
      {
        "type": "checkbox",
        "id": "enable_send_hint",
        "label": "Enable 'Send a Hint'",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_gift_reminder",
        "label": "Enable 'Save for Occasion'",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_size_guide",
        "label": "Enable Size Guide",
        "default": true
