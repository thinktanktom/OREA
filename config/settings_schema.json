      {
        "type": "color",
        "id": "color_orchid_white",
        "label": "Orchid White",
        "default": "#fcfcf9"
      },
      {
        "type": "color",
        "id": "color_petal_pink",
        "label": "Petal Pink",
        "default": "#fff5f7"
      },
      {
        "type": "color",
        "id": "color_growth_green",
        "label": "Growth Green",
        "default": "#e8f3eb"
      },
      {
        "type": "color",
        "id": "color_diamond_sparkle",
        "label": "Diamond Sparkle",
        "default": "#f0f0f0"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "playfair_display_n4"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "inter_n4"
      },
      {
        "type": "header",
        "content": "Font Sizes"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "label": "Base Font Size",
        "min": 14,
        "max": 18,
        "step": 1,
        "default": 16,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image"
      },
      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo Text",
        "default": "ORÉA",
        "info": "Displayed if no logo image is set"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width",
        "min": 50,
        "max": 250,
        "step": 10,
        "default": 120,
        "unit": "px"
      },
      {
        "type": "header",
        "content": "Navigation"
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "show_search",
        "label": "Show Search",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Sticky Header",
        "default": true
      }
    ]
  },
