{% comment %}
  4Cs Color Tab Content
{% endcomment %}

<div data-4cs-content="color" class="hidden flex flex-col h-full">
  <div class="p-12 lg:p-24 flex flex-col items-center gap-20">
    <div class="w-full max-w-3xl space-y-12 text-center">
      <div class="space-y-6">
        <h3 class="text-4xl md:text-6xl font-light text-stone-900 leading-tight font-serif">{{ section.settings.color_heading }}</h3>
        <div class="space-y-8 max-w-lg mx-auto">
          <p class="text-stone-500 font-light text-base leading-relaxed">
            {{ section.settings.color_description_1 }}
          </p>
          <p class="text-stone-500 font-light text-base leading-relaxed">
            {{ section.settings.color_description_2 }}
          </p>
        </div>
      </div>
      
      <div class="pt-12 border-t border-stone-100 w-full max-w-sm mx-auto">
        <div class="flex flex-col space-y-3 items-center text-center">
          <span class="text-[9px] uppercase tracking-[1em] font-bold text-stone-900">ORÃ‰A Standard</span>
          <p class="text-sm text-stone-500 font-light tracking-wide">{{ section.settings.color_standard }}</p>
        </div>
      </div>
    </div>

    <div class="w-full max-w-4xl bg-white p-12 border border-stone-100 shadow-sm relative overflow-hidden">
      <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
        <!-- D-F Colorless -->
        <div class="flex flex-col items-center space-y-8 group">
          <span class="text-[12px] font-bold tracking-[0.2em] text-stone-900 uppercase">D - F</span>
          <div class="w-full aspect-[4/3] max-w-[100px] transition-transform duration-700 group-hover:scale-110">
            <svg viewBox="0 0 100 70" class="w-full h-full stroke-stone-900 stroke-[0.8] fill-none">
              <path d="M15 25 L85 25 L75 10 L25 10 Z" fill="#FFFFFF" />
              <path d="M15 25 L50 60 L85 25 Z" fill="#FFFFFF" />
              <path d="M25 10 L30 25 L50 10 L70 25 L75 10" class="opacity-20" />
              <path d="M30 25 L50 60 L70 25" class="opacity-20" />
            </svg>
          </div>
          <p class="text-[8px] uppercase tracking-[0.4em] font-bold text-stone-400">Colorless</p>
        </div>

        <!-- G-J Near Colorless -->
        <div class="flex flex-col items-center space-y-8 group">
          <span class="text-[12px] font-bold tracking-[0.2em] text-stone-900 uppercase">G - J</span>
          <div class="w-full aspect-[4/3] max-w-[100px] transition-transform duration-700 group-hover:scale-110">
            <svg viewBox="0 0 100 70" class="w-full h-full stroke-stone-900 stroke-[0.8] fill-none">
              <path d="M15 25 L85 25 L75 10 L25 10 Z" fill="#F7F6F2" />
              <path d="M15 25 L50 60 L85 25 Z" fill="#F7F6F2" />
              <path d="M25 10 L30 25 L50 10 L70 25 L75 10" class="opacity-20" />
              <path d="M30 25 L50 60 L70 25" class="opacity-20" />
            </svg>
          </div>
          <p class="text-[8px] uppercase tracking-[0.4em] font-bold text-stone-400">Near Colorless</p>
        </div>

        <!-- K-M Faint -->
        <div class="flex flex-col items-center space-y-8 group">
          <span class="text-[12px] font-bold tracking-[0.2em] text-stone-900 uppercase">K - M</span>
          <div class="w-full aspect-[4/3] max-w-[100px] transition-transform duration-700 group-hover:scale-110">
            <svg viewBox="0 0 100 70" class="w-full h-full stroke-stone-900 stroke-[0.8] fill-none">
              <path d="M15 25 L85 25 L75 10 L25 10 Z" fill="#EBEAD6" />
              <path d="M15 25 L50 60 L85 25 Z" fill="#EBEAD6" />
              <path d="M25 10 L30 25 L50 10 L70 25 L75 10" class="opacity-20" />
              <path d="M30 25 L50 60 L70 25" class="opacity-20" />
            </svg>
          </div>
          <p class="text-[8px] uppercase tracking-[0.4em] font-bold text-stone-400">Faint</p>
        </div>

        <!-- N-R Very Light -->
        <div class="flex flex-col items-center space-y-8 group">
          <span class="text-[12px] font-bold tracking-[0.2em] text-stone-900 uppercase">N - R</span>
          <div class="w-full aspect-[4/3] max-w-[100px] transition-transform duration-700 group-hover:scale-110">
            <svg viewBox="0 0 100 70" class="w-full h-full stroke-stone-900 stroke-[0.8] fill-none">
              <path d="M15 25 L85 25 L75 10 L25 10 Z" fill="#E1E0B9" />
              <path d="M15 25 L50 60 L85 25 Z" fill="#E1E0B9" />
              <path d="M25 10 L30 25 L50 10 L70 25 L75 10" class="opacity-20" />
              <path d="M30 25 L50 60 L70 25" class="opacity-20" />
            </svg>
          </div>
          <p class="text-[8px] uppercase tracking-[0.4em] font-bold text-stone-400">Very Light</p>
        </div>

        <!-- S-Z Light -->
        <div class="flex flex-col items-center space-y-8 group">
          <span class="text-[12px] font-bold tracking-[0.2em] text-stone-900 uppercase">S - Z</span>
          <div class="w-full aspect-[4/3] max-w-[100px] transition-transform duration-700 group-hover:scale-110">
            <svg viewBox="0 0 100 70" class="w-full h-full stroke-stone-900 stroke-[0.8] fill-none">
              <path d="M15 25 L85 25 L75 10 L25 10 Z" fill="#D6D59E" />
              <path d="M15 25 L50 60 L85 25 Z" fill="#D6D59E" />
              <path d="M25 10 L30 25 L50 10 L70 25 L75 10" class="opacity-20" />
              <path d="M30 25 L50 60 L70 25" class="opacity-20" />
            </svg>
          </div>
          <p class="text-[8px] uppercase tracking-[0.4em] font-bold text-stone-400">Light</p>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0 h-[1px] bg-gradient-to-r from-stone-100 via-stone-300 to-stone-100"></div>
    </div>
  </div>
</div>
