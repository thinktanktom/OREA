{% comment %}
  4Cs Cut Tab Content
{% endcomment %}

<div data-4cs-content="cut" class="flex flex-col h-full">
  <div class="p-12 lg:p-24 flex flex-col items-center gap-16">
    <div class="w-full max-w-3xl space-y-12 text-center">
      <div class="space-y-6">
        <h3 class="text-4xl md:text-6xl font-light text-stone-900 leading-tight font-serif">{{ section.settings.cut_heading }}</h3>
        <div class="space-y-8 max-w-lg mx-auto">
          <p class="text-stone-500 font-light text-base leading-relaxed">
            {{ section.settings.cut_description }}
          </p>
        </div>
      </div>
      
      <div class="pt-12 border-t border-stone-100 w-full max-w-sm mx-auto">
        <div class="flex flex-col space-y-3 items-center text-center">
          <span class="text-[9px] uppercase tracking-[1em] font-bold text-stone-900">ORÃ‰A Standard</span>
          <p class="text-sm text-stone-500 font-light tracking-wide">{{ section.settings.cut_standard }}</p>
        </div>
      </div>
    </div>

    <div class="w-full max-w-6xl space-y-2">
      <div class="w-full border-b-[2px] border-stone-900 flex">
        <div class="flex-1 border-x border-stone-100 py-6 text-center">
          <span class="text-[9px] font-bold tracking-[0.2em] text-stone-900">EXCELLENT</span>
        </div>
        <div class="flex-1 border-x border-stone-100 py-6 text-center">
          <span class="text-[9px] font-bold tracking-[0.2em] text-stone-900">VERY GOOD</span>
        </div>
        <div class="flex-1 border-x border-stone-100 py-6 text-center">
          <span class="text-[9px] font-bold tracking-[0.2em] text-stone-900">GOOD</span>
        </div>
        <div class="flex-1 border-x border-stone-100 py-6 text-center">
          <span class="text-[9px] font-bold tracking-[0.2em] text-stone-900">FAIR</span>
        </div>
        <div class="flex-1 border-x border-stone-100 py-6 text-center">
          <span class="text-[9px] font-bold tracking-[0.2em] text-stone-900">POOR</span>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-px bg-stone-100 mt-12">
        <!-- Ideal Cut -->
        <div class="flex flex-col items-center space-y-8 bg-white p-12 group transition-colors duration-700">
          <div class="relative w-full aspect-square flex items-center justify-center">
            <svg viewBox="0 0 160 160" class="w-full h-full fill-none">
              <defs>
                <marker id="arrowhead-cut-ideal" markerWidth="6" markerHeight="6" refX="3" refY="3" orient="auto">
                  <path d="M0,0 L6,3 L0,6 Z" fill="#C5A57D" />
                </marker>
              </defs>
              <g stroke="#1A1A1A" stroke-width="0.8">
                <path d="M30 45 L130 45 L115 25 L45 25 Z" />
                <path d="M45 25 L55 45 M68 25 L80 45 M92 25 L80 45 M115 25 L105 45" opacity="0.4" />
                <path d="M30 45 L80 110 L130 45" />
                <path d="M30 45 L55 77 L80 110 L105 77 L130 45" opacity="0.3" />
                <path d="M55 45 L80 110 L105 45" opacity="0.3" />
                <path d="M80 45 L80 110" opacity="0.3" />
              </g>
              <g stroke="#C5A57D" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <path d="M60 10 V84 H100 V10" marker-end="url(#arrowhead-cut-ideal)" />
              </g>
            </svg>
          </div>
          <div class="flex flex-col items-center space-y-2 text-center">
            <h4 class="text-[11px] font-bold text-stone-900 tracking-[0.1em] uppercase">Ideal Cut</h4>
            <p class="text-[10px] text-stone-400 font-light tracking-wide">Optimal light performance</p>
          </div>
        </div>

        <!-- Shallow Cut -->
        <div class="flex flex-col items-center space-y-8 bg-white p-12 group transition-colors duration-700">
          <div class="relative w-full aspect-square flex items-center justify-center">
            <svg viewBox="0 0 160 160" class="w-full h-full fill-none">
              <defs>
                <marker id="arrowhead-cut-shallow" markerWidth="6" markerHeight="6" refX="3" refY="3" orient="auto">
                  <path d="M0,0 L6,3 L0,6 Z" fill="#C5A57D" />
                </marker>
              </defs>
              <g stroke="#1A1A1A" stroke-width="0.8">
                <path d="M25 45 L135 45 L120 35 L40 35 Z" />
                <path d="M25 45 L80 80 L135 45" />
                <path d="M25 45 L52 62 L80 80 L108 62 L135 45" opacity="0.3" />
                <path d="M52 45 L80 80 L108 45" opacity="0.3" />
              </g>
              <g stroke="#C5A57D" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <path d="M60 10 V67 L75 95" marker-end="url(#arrowhead-cut-shallow)" />
              </g>
            </svg>
          </div>
          <div class="flex flex-col items-center space-y-2 text-center">
            <h4 class="text-[11px] font-bold text-stone-900 tracking-[0.1em] uppercase">Shallow Cut</h4>
            <p class="text-[10px] text-stone-400 font-light tracking-wide">Poor light performance</p>
          </div>
        </div>

        <!-- Deep Cut -->
        <div class="flex flex-col items-center space-y-8 bg-white p-12 group transition-colors duration-700">
          <div class="relative w-full aspect-square flex items-center justify-center">
            <svg viewBox="0 0 160 160" class="w-full h-full fill-none">
              <defs>
                <marker id="arrowhead-cut-deep" markerWidth="6" markerHeight="6" refX="3" refY="3" orient="auto">
                  <path d="M0,0 L6,3 L0,6 Z" fill="#C5A57D" />
                </marker>
              </defs>
              <g stroke="#1A1A1A" stroke-width="0.8">
                <path d="M40 45 L120 45 L110 30 L50 30 Z" />
                <path d="M40 45 L80 130 L120 45" />
                <path d="M40 45 L60 87 L80 130 L100 87 L120 45" opacity="0.3" />
                <path d="M60 45 L80 130 L100 45" opacity="0.3" />
              </g>
              <g stroke="#C5A57D" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <path d="M65 10 V98 L115 125" marker-end="url(#arrowhead-cut-deep)" />
              </g>
            </svg>
          </div>
          <div class="flex flex-col items-center space-y-2 text-center">
            <h4 class="text-[11px] font-bold text-stone-900 tracking-[0.1em] uppercase">Deep Cut</h4>
            <p class="text-[10px] text-stone-400 font-light tracking-wide">Poor light performance</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
